@using U2U.GameStore.Web.ViewModels.Games
@using U2U.Games.Core.Entities
@model GamesCreateViewModel

@{
  ViewData["Title"] = "Create Game";
}

<h1>Create Game</h1>

<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="PublisherId" class="control-label"></label>
        <select asp-for="PublisherId" class="form-control" asp-items="@(new SelectList(Model.Publishers, nameof(Publisher.Id), nameof(Publisher.Name)))">
          <option value="-1">Please select one</option>
</select>
          <span asp-validation-for="PublisherId" class="text-danger"></span>
</div>
      <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
